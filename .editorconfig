# top-most EditorConfig file
root = true

# Everything else
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# YAML files
[*.yaml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
